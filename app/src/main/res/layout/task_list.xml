<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="#e0e0e0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rv_tasklist_item_nametask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя таска"
            android:layout_margin="10dp"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/rv_tasklist_item_createdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01.06.2018, 23:27:59"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/rv_tasklist_item_duedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.06.2020, 23:27:59"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/rv_tasklist_item_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Приоритет"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:textSize="18sp"/>
</LinearLayout>